<MudTooltip Inline="false" Duration="0" Color="Color.Primary" Arrow Placement="Placement.Right" Text="@(DrawerOpen ? string.Empty : AlternativeCaptionForTooltip ?? Caption)">
    @if (!string.IsNullOrWhiteSpace(Href))
    {
        <MudNavLink Match="@Match" Icon="@Icon" Href="@Href">@Caption</MudNavLink>
    }
    else
    {
        <MudNavLink Match="@Match" Icon="@Icon" OnClick="OnClick">@Caption</MudNavLink>    
    }
</MudTooltip>

@code 
{
    [Parameter, EditorRequired] public required bool DrawerOpen { get; set; }
    [Parameter, EditorRequired] public required string Caption { get; set; }
    [Parameter] public string? AlternativeCaptionForTooltip { get; set; }
    [Parameter, EditorRequired] public required string Icon { get; set; }
    [Parameter] public string? Href { get; set; }
    [Parameter] public EventCallback OnClick { get; set; }
    [Parameter] public required NavLinkMatch Match { get; set; } = NavLinkMatch.Prefix;
}