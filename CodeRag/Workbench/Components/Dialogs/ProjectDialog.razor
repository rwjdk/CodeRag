<MudDialog Style="max-width: 80% !important; min-width: 80% !important; max-height: 80% !important; min-height: 80% !important;">
    <DialogContent>
        <RTextField Label="Name" @bind-Value="@Project.Name"/>
        <RTextField Label="Description" @bind-Value="@Project.Description" Lines="3"/>
        <RTextField Label="Repo URL" @bind-Value="@Project.RepoUrl"/>
        <MudTabs>
            <MudTabPanel Text="Large Language Model">
                <RTextField Label="Azure Open AI Endpoint" @bind-Value="@Project.AzureOpenAiEndpoint" InputType="InputType.Url" />
                <RTextField Label="Azure Open AI Key" @bind-Value="@Project.AzureOpenAiKey" InputType="InputType.Password"/> @* todo: Allow adornment click to reveal *@
                <RTextField Label="Azure Open AI Embedding Model DeploymentName" @bind-Value="@Project.AzureOpenAiEmbeddingModelDeploymentName"/>
            </MudTabPanel>
            <MudTabPanel Text="GitHub">
                <RTextField Label="GitHub Token" @bind-Value="@Project.GitHubToken" InputType="InputType.Password" /> @* todo: Allow adornment click to reveal *@
            </MudTabPanel>
            <MudTabPanel Text="Vector Store">
                <RTextField Label="SQL Server ConnectionString" @bind-Value="@Project.SqlServerVectorStoreConnectionString" InputType="InputType.Password" /> @* todo: Allow adornment click to reveal *@
            </MudTabPanel>
            <MudTabPanel Text="Code Sources">
                TODO
            </MudTabPanel>
            <MudTabPanel Text="Documentation Sources">
                TODO
            </MudTabPanel>
            <MudTabPanel Text="Test Chat">
                <RTextField Label="Instructions" @bind-Value="@Project.TestChatDeveloperInstructions" Lines="10" />
                <RTextField Label="Default Input Message" @bind-Value="@Project.DefaultTestChatInput" />
            </MudTabPanel>
        </MudTabs>
    </DialogContent>
    <DialogActions>
        <RButton Color="Color.Default">Cancel</RButton>
        <RButton OnClick="Save">Save</RButton>
    </DialogActions>
</MudDialog>